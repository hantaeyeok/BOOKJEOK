		<typeAlias type="com.kh.bookjeok.book.model.vo.TopCategory" alias="topCategory"/>
		<typeAlias type="com.kh.bookjeok.book.model.vo.LowerCategory" alias="lowerCategory"/>
		<typeAlias type="com.kh.bookjeok.book.model.vo.MidCategory" alias="midCategory"/>
